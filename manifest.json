{
  "manifest_version": 2,

  "name": "GitHub PR Helper",
  "description": "View and manage labels in GitHub Pull Request views.",
  "version": "0.3.0",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "author": "Pete Bacon Darwin",

  "permissions": [  ],

  "content_scripts": [{
    "matches": ["https://github.groupondev.com/*/pull*"],

    "css": ["styles.css"],
    "js": [
      "lib/angular.js",

      "src/CSRFScraper.js",
      "src/githubAPI.js",
      "src/labels.js",
      "src/listGroupItems.js",
      "src/credentialsForm.js",
      "src/githubHacks.js",
      "src/flashMessages.js",

      "src/extension.js"
    ]
  }],

  "web_accessible_resources": [
    "lib/jquery-2.0.3.min.map"
  ]
}
